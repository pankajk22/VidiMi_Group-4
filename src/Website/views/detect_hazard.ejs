<div class="limiter row">
    <form enctype="multipart/form-data" id="detect_hazard" class="container-login100" method="POST" action="/detect_hazard">
        <div class="w-50" style="display: flex;justify-content: center;">
            <div class="dropHere">
                <input id="upfile1" name="video1" type="file" value="upload" onchange="sub1(this)" />
                <div>
                    <i class="material-icons w-100" style="font-size:36px; text-align: center; margin-bottom: 10px;">cloud_upload</i>
                    <p id="uploadButton1">Drag and drop a video or click to upload</p>
                </div>
            </div>
        </div>
        <div class="w-50" style="display: flex;justify-content: center;">
            <div class="dropHere">
                <input id="upfile2" name="video2" type="file" value="upload" onchange="sub2(this)" />
                <div>
                    <i class="material-icons w-100" style="font-size:36px; text-align: center; margin-bottom: 10px;">cloud_upload</i>
                    <p id="uploadButton2">Drag and drop a video or click to upload</p>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-color" style="color: white; align-content: center;">Compute</button>
    </form>
</div>

<script>
    function getFile1() {
        document.getElementById("upfile1").click();
    }

    function sub1(obj) {
        var file = obj.value;
        var fileName = file.split("\\");
        document.getElementById("uploadButton1").innerHTML = fileName[fileName.length - 1];
        if (fileName == '')
            document.getElementById("uploadButton1").innerHTML = "Choose video to Upload";
        event.preventDefault();
    }

    function getFile2() {
        document.getElementById("upfile2").click();
    }

    function sub2(obj) {
        var file = obj.value;
        var fileName = file.split("\\");
        document.getElementById("uploadButton2").innerHTML = fileName[fileName.length - 1];
        if (fileName == '')
            document.getElementById("uploadButton2").innerHTML = "Choose video to Upload";
        event.preventDefault();
    }
</script>
